#: import Factory kivy.factory.Factory
#: import Keypad components.keypad
#: import ImageButton components.toolbars.image_button

<CoordBar>:
  orientation: "horizontal"
  size_hint_y: 1

  Button:
    size_hint_x: 0.3
    text: "[PICKER]"
    font_size: self.height / 2

  BoxLayout:
    size_hint_x: 0.1
    orientation: "horizontal"
    BoxLayout:
      orientation: "vertical"
      Label:
        text: "F"
      Label:
        text: ""
    BoxLayout:
      orientation: "vertical"
      Label:
        text: "R"
      Label:
        text: ""
    BoxLayout:
      orientation: "vertical"
      Label:
        text: ""
      Label:
        text: "1"

  BoxLayout:
    size_hint_x: 0.4
    orientation: "vertical"
    Button:
      background_color: (0, 0, 0, 1)
      id: pos_label
      size_hint_y: 0.7
      font_name: "fonts/iosevka-regular.ttf"
      font_size: self.height / 1.5
      font_style: "bold"
      color: app.formats.display_color
      text: root.formattedPosition
      text_size: self.size
      halign: 'right'
      valign: 'center'
      on_release: root.update_position()
    Label:
      size_hint_y: 0.3
      font_name: "fonts/iosevka-regular.ttf"
      font_size: self.height / 1.5
      font_style: "bold"
      color: app.formats.display_color
      text: root.formattedSpeed
      text_size: self.size
      halign: 'right'
      valign: 'top'

  Button:
    size_hint_x: 0.15
    text: root.axisName
    font_size: self.height / 1.5
    background_color: [0.2, 1, 0.2, 1] if root.syncEnable else [0.3, 0.3, 0.3, 1]
    on_release: root.zero_position()

  Label:
    size_hint_x: 0.05
    text: "."
